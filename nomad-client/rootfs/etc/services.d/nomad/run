#!/usr/bin/env bashio
# shellcheck shell=bash

bashio::log.info "Starting Nomad..."

##################
# DEFINE OPTIONS #
##################
declare -a options
options+=(-config /etc/nomad.d/nomad.hcl)

####################
# LAUNCH NOMAD     #
####################
bashio::log.info "... nomad launched"

exec /usr/sbin/nomad agent "${options[@]}"
